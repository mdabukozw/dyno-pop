<ul class='listing--container'>
	<li class='listing'>
		<div class='u-full-width'>
			<form id='link-new' action='/links' method='POST'>
				<label for='link' class='u-full-width'>Shorten your link</label>
				<input id='link' class='u-full-width form--input' type='text' name="link" placeholder='Shorten your link' minlength='6' title='Enter a link with a least 4 characters'/>
			</form>
		</div>
		<div class='u-full-width'>
			<span class='listing--amount'>
				Let's get you a short link
			</span>
			<button class='u-pull-right' type='submit' form='link-new'>Shorten</button>
		</div>
	</li>
	<% unless @dyno_link.nil? %>
		<li class='listing'>
			<div class='listing--metadata u-full-width'>
				<div>
					<span><b>#dynopop</b></span>
					<span class='u-pull-right'>
						<span class='listing--timestamp'><%= Time.now.strftime('%d %b %Y') %></span>
					</span>
				</div>
			</div>
			<div class='u-full-width'>
				<p class='listing--story'>
					<a href="/<%= @dyno_link %>" target='_blank'><%= @dyno_link %></a>
				</p>
			</div>
			<div class='u-full-width'>
				<span class='listing--amount'>
					Ready to copy
				</span>
				<div class='button u-pull-right'>
					<span>
						<svg id="i-lightning" class='icon-nano' xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="6.25%">
						    <path d="M18 13 L26 2 8 13 14 19 6 30 24 19 Z" />
						</svg>
					</span>
					<span>Copy</span>
				</div>
			</div>
		</li>
	<% end %>
</ul>